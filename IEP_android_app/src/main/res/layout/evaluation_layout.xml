<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/feedback_cmnt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Good work. Keep it up."
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/feedback_cmnt"
        android:text="Date:"
        android:textSize="12dp"
        android:textColor="@color/colorPrimary"
        android:layout_marginLeft="60dp"/>

    <TextView
        android:id="@+id/feedback_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/feedback_cmnt"
        android:text="04/12/2019"
        android:textSize="12dp"
        android:textColor="@color/colorText"
        android:layout_marginLeft="160dp"/>

    <TextView
        android:id="@+id/sentiment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/feedback_date"
        android:layout_alignLeft="@+id/date"
        android:textSize="12dp"
        android:textColor="@color/colorPrimary"
        android:text="Sentiment:"/>

    <TextView
        android:id="@+id/feedback_sentiment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/feedback_date"
        android:text="Positive"
        android:textSize="12dp"
        android:textColor="@color/colorText"
        android:layout_alignLeft="@+id/feedback_date"/>

    <TextView
        android:id="@+id/strategy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/feedback_sentiment"
        android:layout_alignLeft="@+id/date"
        android:textSize="12dp"
        android:textColor="@color/colorPrimary"
        android:text="Strategy Used:"/>

    <TextView
        android:id="@+id/strategy_used"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/feedback_sentiment"
        android:text="Team Activity"
        android:textSize="12dp"
        android:textColor="@color/colorText"
        android:layout_alignLeft="@+id/feedback_date"/>

    <TextView
        android:id="@+id/result_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/strategy_used"
        android:layout_alignLeft="@+id/date"
        android:textSize="12dp"
        android:textColor="@color/colorPrimary"
        android:text="Result:"/>

    <TextView
        android:id="@+id/result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/strategy_used"
        android:text="Complete"
        android:textSize="12dp"
        android:textColor="@color/colorText"
        android:layout_alignLeft="@+id/feedback_date"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_check_circle_green_24dp"
        android:layout_below="@id/feedback_cmnt"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp" />



</RelativeLayout>
